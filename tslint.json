{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
        "no-angle-bracket-type-assertion": false,
        "quotemark": [ true, "single", "avoid-escape" ],
        "ordered-imports": false,
        "member-access": [true, "no-public"],
        "object-literal-sort-keys": false,
        "trailing-comma": [ true, {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
            }
        }],
        "member-ordering": [
            true, {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "jsx-curly-spacing": {
            "when": "never", 
            "children": true
        },
        "arrow-parens": [true, "ban-single-arg-parens"],
        "no-empty": false,
        "jsx-no-lambda": false
    },
    "rulesDirectory": []
}